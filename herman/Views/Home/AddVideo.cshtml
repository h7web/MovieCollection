@model herman.Models.Video

@{
    ViewBag.Title = "AddVideo";
    ViewData["Categories"] = ((herman.Controllers.HomeController)this.ViewContext.Controller).GetCategories();
}

<h2>Add Video</h2>


@using (Html.BeginForm("SearchForVideo", "Home")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            Step 1: Search Title
            <div class="col-md-10">
                @Html.TextBox("Search","", new { @class = "form-control" }) <input type="submit" name="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div id="SearchResults">
    @Html.Partial("IMDBResults")
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
